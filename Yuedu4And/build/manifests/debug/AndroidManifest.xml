<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="xmu.swordbearer.yuedu">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="16"/>
    <supports-screens android:anyDensity="true" android:largeScreens="true" android:normalScreens="true" android:resizeable="true" android:smallScreens="true"/>
    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme">
        <activity android:label="@string/app_name" android:name="xmu.swordbearer.yuedu.ui.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="xmu.swordbearer.yuedu.ui.activity.ArticleDetailsActivity"/>
        <activity android:name="xmu.swordbearer.yuedu.ui.activity.WeatherActivity">
        </activity>
        <activity android:launchMode="singleTask" android:name="xmu.swordbearer.yuedu.ui.activity.HomeActivity">

        </activity>

        <service android:name="xmu.swordbearer.yuedu.offline.OfflineService"/>
        <receiver android:name="xmu.swordbearer.yuedu.offline.OfflineBroadcast" android:process=".offline">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="download_article_started"/>
                <action android:name="download_article_finished"/>
            </intent-filter>
        </receiver>

        <service android:name="xmu.swordbearer.yuedu.music.MusicPlayerService">
        </service>

        <receiver android:name="xmu.swordbearer.yuedu.music.BecomeNoisyReceiver">
            <intent-filter>
                <action android:name="android.media.AUDIO_BECOMING_NOISY"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>
